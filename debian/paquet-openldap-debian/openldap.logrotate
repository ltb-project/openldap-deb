#=================================================

/var/log/openldap.log {
    daily
    rotate 10
    missingok
    notifempty
    sharedscripts
    postrotate
	# reload syslog
	/usr/lib/rsyslog/rsyslog-rotate || true
	invoke-rc.d syslog-ng reload || true
    endscript
}
