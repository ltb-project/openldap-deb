#=================================================

/var/log/openldap.log {
    daily
    rotate 10
    missingok
    notifempty
    sharedscripts
    postrotate
	# reload syslog
        systemctl kill -s HUP rsyslog.service
        systemctl kill -s HUP syslog-ng.service
    endscript
}
